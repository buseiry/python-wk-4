{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "app-core.js",
      "app-auth.js",
      "app-session.js",
      "app-payment.js",
      "app-ui.js"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9095
    },
    "firestore": {
      "port": 8085
    },
    "hosting": {
      "port": 5005
    },
    "functions": {
      "port": 5002
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4005
    }
  }
}

